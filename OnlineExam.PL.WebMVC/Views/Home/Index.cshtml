@{
    ViewData["Title"] = "Home Page";
}


@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 border border-success ">
            <br />
            <div> <h3 class="text-center">User Log In </h3></div>
            <br />
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label>E-mail: </label>
                    </div>
                    <div class="col-md-10">
                        <input type="text" name="txtUserName" placeholder="E-mail..." class="form-control" required />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-2">
                        <label>Password: </label>
                    </div>
                    <div class="col-md-10">
                        <input type="password" name="txtPassword" placeholder="Password..." class="form-control" required />
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-md-12">
                        <input type="submit" value="Log In" class="btn btn-success form-control" />
                    </div>
                </div>
            </div>
            <br />
        </div>
        <div class="col-md-3"></div>
    </div>
}
<br />
<hr />
<div class=" text-center" style="color:red">@Html.ValidationSummary()</div>

